<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signin_with_navigation"
    app:startDestination="@id/accountRecoeryFragment">

    <fragment
        android:id="@+id/accountRecoeryFragment"
        android:name="com.example.ibeor.activities.fragments.AccountRecoeryFragment"
        android:label="fragment_account_recoery"
        tools:layout="@layout/fragment_account_recoery" >
        <action
            android:id="@+id/action_accountRecoeryFragment_to_signinEmailFragment"
            app:destination="@id/signinEmailFragment"
            />

    </fragment>
    <fragment
        android:id="@+id/allowLocationFragment"
        android:name="com.example.ibeor.activities.fragments.AllowLocationFragment"
        android:label="fragment_allow_location"
        tools:layout="@layout/fragment_allow_location" >


        <action
            android:id="@+id/action_allowLocationFragment_to_genderFragment"
            app:destination="@id/genderFragment" />
    </fragment>
    <fragment
        android:id="@+id/enterPhoneCodeFragment"
        android:name="com.example.ibeor.activities.fragments.EnterPhoneCodeFragment"
        android:label="fragment_enter_phone_code"
        tools:layout="@layout/fragment_enter_phone_code" >
        <action
            android:id="@+id/action_enterPhoneCodeFragment_to_yourMailFragment"
            app:destination="@id/yourMailFragment" />
    </fragment>
    <fragment
        android:id="@+id/firstNameFragment"
        android:name="com.example.ibeor.activities.fragments.FirstNameFragment"
        android:label="fragment_first_name"
        tools:layout="@layout/fragment_first_name" >
        <action
            android:id="@+id/action_firstNameFragment_to_allowLocationFragment"
            app:destination="@id/allowLocationFragment" />
    </fragment>
    <fragment
        android:id="@+id/myPhoneNumberFragment"
        android:name="com.example.ibeor.activities.fragments.MyPhoneNumberFragment"
        android:label="fragment_my_phone_number"
        tools:layout="@layout/fragment_my_phone_number" >
        <action
            android:id="@+id/action_myPhoneNumberFragment_to_enterPhoneCodeFragment"
            app:destination="@id/enterPhoneCodeFragment" />
    </fragment>
    <fragment
        android:id="@+id/signinEmailFragment"
        android:name="com.example.ibeor.activities.fragments.SigninEmailFragment"
        android:label="fragment_signin_email"
        tools:layout="@layout/fragment_signin_email" >
        <action
            android:id="@+id/action_signinEmailFragment_to_myPhoneNumberFragment"
            app:destination="@id/myPhoneNumberFragment" />
    </fragment>
    <fragment
        android:id="@+id/yourMailFragment"
        android:name="com.example.ibeor.activities.fragments.YourMailFragment"
        android:label="fragment_your_mail"
        tools:layout="@layout/fragment_your_mail" >
        <action
            android:id="@+id/action_yourMailFragment_to_firstNameFragment"
            app:destination="@id/firstNameFragment" />
    </fragment>
    <fragment
        android:id="@+id/DOBFragment"
        android:name="com.example.ibeor.fragments.DOBFragment"
        android:label="fragment_d_o_b"
        tools:layout="@layout/fragment_d_o_b" >
        <action
            android:id="@+id/action_DOBFragment_to_addPhotoFragment2"
            app:destination="@id/addPhotoFragment" />
        <action
            android:id="@+id/action_DOBFragment_to_genderFragment"
            app:destination="@id/genderFragment" />
    </fragment>
    <fragment
        android:id="@+id/genderFragment"
        android:name="com.example.ibeor.fragments.GenderFragment"
        android:label="GenderFragment" >
        <action
            android:id="@+id/action_genderFragment_to_DOBFragment"
            app:destination="@id/DOBFragment" />
    </fragment>
    <fragment
        android:id="@+id/addPhotoFragment"
        android:name="com.example.ibeor.fragments.AddPhotoFragment"
        android:label="fragment_add_photo"
        tools:layout="@layout/fragment_add_photo" >
        <action
            android:id="@+id/action_addPhotoFragment_to_selectCountryFragment"
            app:destination="@id/selectCountryFragment" />
    </fragment>
    <fragment
        android:id="@+id/selectCountryFragment"
        android:name="com.example.ibeor.fragments.SelectCountryFragment"
        android:label="SelectCountryFragment" >
        <action
            android:id="@+id/action_selectCountryFragment_to_welComeFragment"
            app:destination="@id/welComeFragment" />
    </fragment>
    <fragment
        android:id="@+id/welComeFragment"
        android:name="com.example.ibeor.fragments.WelComeFragment"
        android:label="WelComeFragment" >
        <action
            android:id="@+id/action_welComeFragment_to_madeitFragment"
            app:destination="@id/madeitFragment" />
    </fragment>
    <fragment
        android:id="@+id/madeitFragment"
        android:name="com.example.ibeor.fragments.MadeitFragment"
        android:label="fragment_madeit"
        tools:layout="@layout/fragment_madeit" >
        <action
            android:id="@+id/action_madeitFragment_to_mainActivity"
            app:destination="@id/mainActivity" />
    </fragment>
    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.ibeor.activities.activities.MainActivity"
        android:label="MainActivity" />

</navigation>