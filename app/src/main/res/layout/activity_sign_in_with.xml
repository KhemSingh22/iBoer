<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
<variable
    name="signinviewmodel"
    type="com.example.ibeor.viewmodels.SignWithViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.SignInWithActivity">
        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:layout_margin="@dimen/_26sdp"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/splash_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.128"
            tools:layout_editor_absoluteX="33dp" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_26sdp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="@dimen/_26sdp"
            android:background="@drawable/green_back"
            android:onClick="@{signinviewmodel::phoneNumber}"
            android:text="@string/phone_number"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp"
            app:layout_constraintBottom_toTopOf="@+id/fb_login"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fb_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_26sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_26sdp"
            android:background="@drawable/fb_icon"
            android:onClick="@{signinviewmodel::fb_login}"
            android:text="@string/facebook"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp"
            app:layout_constraintBottom_toTopOf="@+id/apple_login"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_call" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/apple_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_26sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_26sdp"
            android:background="@drawable/apple_back"
            android:gravity="center"
            android:onClick="@{signinviewmodel::applelogin}"
            android:text="@string/apple"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fb_login" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/apple_icon"
            android:translationZ="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/apple_login"
            app:layout_constraintEnd_toEndOf="@+id/apple_login"
            app:layout_constraintHorizontal_bias="0.319"
            app:layout_constraintStart_toStartOf="@+id/apple_login"
            app:layout_constraintTop_toTopOf="@+id/apple_login"
            app:layout_constraintVertical_bias="0.583" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fb_"
            android:translationZ="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/fb_login"
            app:layout_constraintEnd_toEndOf="@+id/fb_login"
            app:layout_constraintHorizontal_bias="0.319"
            app:layout_constraintStart_toStartOf="@+id/fb_login"
            app:layout_constraintTop_toTopOf="@+id/fb_login"
            app:layout_constraintVertical_bias="0.555" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/call_icon"
            android:translationZ="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_call"
            app:layout_constraintEnd_toEndOf="@+id/btn_call"
            app:layout_constraintHorizontal_bias="0.214"
            android:layout_marginBottom="5sp"
            app:layout_constraintStart_toStartOf="@+id/btn_call"
            app:layout_constraintTop_toTopOf="@+id/btn_call"
            app:layout_constraintVertical_bias="0.638" />

        <TextView
            android:id="@+id/demo_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_26sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_26sdp"
            android:padding="@dimen/_8sdp"
            android:text="@string/by_tapping_create_account_or_sign_in_you_agree_to_our_terms_learn_how_we_process_your_data_on_our_privacy_or_policy_and_cookies_policy"
            app:layout_constraintBottom_toTopOf="@+id/truble_signin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/apple_login" />

        <TextView
            android:id="@+id/truble_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:text="@string/trouble_signing_in"
            android:textColor="@color/red"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="@dimen/_16sdp"
            app:layout_constraintTop_toBottomOf="@+id/demo_tv"
            app:layout_constraintVertical_bias="0.272" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>