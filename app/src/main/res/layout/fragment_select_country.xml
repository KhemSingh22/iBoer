<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
    <variable
    name="countryViewModel"
    type="com.example.ibeor.viewmodels.CountryViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.SelectCountryFragment">
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:src="@drawable/back_btn"
            android:onClick="@{countryViewModel::onback}"
            android:text="@string/allow_location"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:text="@string/select_your_country"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_50sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="@dimen/_3sdp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/demo_tv"
            android:layout_width="wrap_content"
            android:text="@string/be_proud_of_your_country"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="@dimen/_3sdp"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/title_tv"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/roots_tv"
            android:layout_width="wrap_content"
            android:text="@string/roots"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/_16sdp"
            android:padding="@dimen/_3sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/demo_tv"
            android:layout_height="wrap_content"/>

        <com.hbb20.CountryCodePicker
            android:id="@+id/ccp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ccpDialog_keyboardAutoPopup="false"
            app:ccp_defaultNameCode="IN"
            android:layout_marginTop="@dimen/_16sdp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/_16sdp"
            android:gravity="start"
            app:ccp_showFullName="true"
            app:ccp_textGravity="LEFT"
            app:ccp_showPhoneCode="false"
            android:padding="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:background="@drawable/textfield_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/roots_tv"
            tools:ignore="MissingConstraints" />



        <com.hbb20.CountryCodePicker
            android:id="@+id/ccp1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ccpDialog_keyboardAutoPopup="false"
            app:ccp_defaultNameCode="IN"
            android:gravity="start"
            app:ccp_showFullName="true"
            app:ccp_textGravity="LEFT"
            app:ccp_showPhoneCode="false"
            android:padding="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_16sdp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:visibility="gone"
            android:background="@drawable/textfield_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ccp"
            tools:ignore="MissingConstraints" />


        <LinearLayout
            android:id="@+id/ln_layout"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_16sdp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:visibility="gone"
            android:background="@drawable/textfield_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/roots_tv"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/spinner_algorithm"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/_8sdp"
                android:background="@color/transparent"
                style="@style/CustomSpinnerTheme"
                android:layout_height="@dimen/_35sdp"
                />
<ImageView
    android:layout_width="wrap_content"
    android:src="@drawable/drop_icon"
    android:layout_marginLeft="-30dp"
    android:layout_gravity="center"
    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lt_layout"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_16sdp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:visibility="gone"
            android:background="@drawable/textfield_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ln_layout"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/select_countrySpin"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/_8sdp"
                android:background="@color/transparent"
                style="@style/CustomSpinnerTheme"
                android:layout_height="@dimen/_35sdp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/drop_icon"
                android:layout_marginLeft="-30dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_marginStart="@dimen/_26sdp"
            android:layout_marginEnd="@dimen/_26sdp"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardElevation="@dimen/_10sdp"
            android:shadowColor="@color/light_black"
            app:cardCornerRadius="@dimen/_23sdp"
            app:layout_constraintTop_toBottomOf="@+id/ccp1"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_continu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/purple_back"
                android:padding="@dimen/_5sdp"
                android:text="@string/ontinue"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_margin="@dimen/_3sdp"
                android:textSize="@dimen/_16sdp"
                tools:layout_editor_absoluteX="0dp" />

        </androidx.cardview.widget.CardView>


        <ProgressBar
            android:id="@+id/country_progress"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="@color/red"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            android:indeterminateTint="@color/pink"

            app:layout_constraintBottom_toBottomOf="@+id/card_view"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>