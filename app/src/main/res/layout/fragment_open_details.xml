<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="openviewomdel"
            type="com.example.ibeor.viewmodels.OpenDetailsVM" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:background="@color/main_back"
        android:layout_height="match_parent"
        tools:context=".fragments.OpenDetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/main_back"
        android:layout_height="match_parent"
        tools:context=".fragments.OpenDetailsFragment">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/op_Viewpager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.google.android.material.tabs.TabLayout
            android:id="@+id/op_tab_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tabMode="fixed"
            app:tabIndicatorHeight="0dp"
            android:background="@color/transparent"
            app:tabGravity="fill"
            app:tabBackground="@drawable/tab_selector"
            android:layout_marginStart="@dimen/_12sdp"
            app:layout_constraintBottom_toBottomOf="@+id/op_Viewpager"
            app:layout_constraintStart_toStartOf="parent"
            />


        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:src="@drawable/location_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/op_Viewpager"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginBottom="-18dp"
            android:layout_height="@dimen/_30sdp"/>

        <LinearLayout
            android:id="@+id/roots_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/_12sdp"
            app:layout_constraintTop_toBottomOf="@+id/op_Viewpager"
            app:layout_constraintStart_toStartOf="parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:text="Roots "
                android:layout_marginStart="@dimen/_12sdp"
                android:drawablePadding="@dimen/_8sdp"
                android:drawableLeft="@drawable/world_icon"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="United States "
                android:layout_marginStart="@dimen/_12sdp"
                android:drawablePadding="@dimen/_8sdp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_height="wrap_content"
                android:src="@drawable/flag"
                />
            <TextView
                android:layout_width="wrap_content"
                android:text="+"
                android:paddingTop="@dimen/_3sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:drawablePadding="@dimen/_8sdp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_height="wrap_content"
                android:src="@drawable/nigiera"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/aways"
            android:layout_width="wrap_content"
            android:text="@string/_5_miles_away"
            android:drawableLeft="@drawable/map_ic"
            android:paddingTop="@dimen/_3sdp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/_12sdp"
            android:drawablePadding="@dimen/_8sdp"
            app:layout_constraintTop_toBottomOf="@+id/roots_lay"
            android:layout_marginBottom="@dimen/_12sdp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>

        <View
            android:id="@+id/view_back"
            android:layout_width="match_parent"
            android:background="@color/light_black"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/aways"
            />

        <TextView
            android:id="@+id/Basic_info"
            android:layout_width="wrap_content"
            android:text="@string/basic_about_me"
            android:paddingTop="@dimen/_3sdp"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/_12sdp"
            android:drawablePadding="@dimen/_8sdp"
            app:layout_constraintTop_toBottomOf="@+id/view_back"
            android:layout_marginBottom="@dimen/_12sdp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
             android:id="@+id/Op_recyclerView"
            android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Basic_info"
            android:layout_height="wrap_content"/>



        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toBottomOf="@+id/Op_recyclerView"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="wrap_content">
            <View
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/view_back1"
                android:layout_width="match_parent"
                android:background="@color/light_black"
                android:layout_height="@dimen/_1sdp"
                />
            <TextView
                android:id="@+id/user_pro"
                android:layout_width="wrap_content"
                android:text="@string/sharee_marissa_mendoza_s_profile"
                android:paddingTop="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/_12sdp"
                android:drawablePadding="@dimen/_8sdp"
                app:layout_constraintTop_toBottomOf="@+id/view_back1"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="@dimen/_12sdp"
                android:textColor="@color/light2_black"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/report_tv"
                android:layout_width="wrap_content"
                android:text="@string/report_marissa"
                android:paddingTop="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                android:drawableLeft="@drawable/block_icon"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/_12sdp"
                android:drawablePadding="@dimen/_8sdp"
                app:layout_constraintTop_toBottomOf="@+id/user_pro"
                android:layout_marginBottom="@dimen/_12sdp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/block_tv"
                android:layout_width="wrap_content"
                android:text="@string/block_marissa"
                android:paddingTop="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                android:drawableLeft="@drawable/block_icon"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/_12sdp"
                android:drawablePadding="@dimen/_8sdp"
                app:layout_constraintTop_toBottomOf="@+id/report_tv"
                android:layout_marginBottom="@dimen/_12sdp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>


            <ImageView
                android:id="@+id/no_iv"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:src="@drawable/no_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/block_tv"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="@dimen/_12sdp"
                app:layout_constraintEnd_toStartOf="@+id/supperLike_iv"
                app:layout_constraintHorizontal_bias="0.5"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/supperLike_iv"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:src="@drawable/supperlike_icon"
                app:layout_constraintTop_toBottomOf="@id/block_tv"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/_12sdp"
                app:layout_constraintEnd_toStartOf="@+id/yes_Iv"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/no_iv" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/yes_Iv"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_14sdp"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/yes_icon"
                app:layout_constraintTop_toBottomOf="@id/block_tv"
                android:layout_marginEnd="@dimen/_12sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/_12sdp"
                app:layout_constraintStart_toEndOf="@+id/supperLike_iv" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>